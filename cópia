Banco de Dados
Programa ultilizado HEIDISQL
CREATE DATABASE projetoa3;
USE projetoa3;
CREATE TABLE login (
nome VARCHAR (300),
login VARCHAR (100),
senha VARCHAR (100),
PRIMARY KEY (login)
);

INSERT INTO
login (nome,login,senha) 
VALUES
('administrador','admin','aluno123');

